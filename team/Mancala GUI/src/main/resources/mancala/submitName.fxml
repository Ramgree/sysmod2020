<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mancala.SubmitNameController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Your player name:" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <buttons>
          <Button fx:id="sumbitNameButton" mnemonicParsing="false" onAction="#joinLobby" text="Submit" />
        </buttons>
      </ButtonBar>
      <TextField fx:id="nameField" onAction="#joinLobby" promptText="Enter name here..." GridPane.columnIndex="1" />
   </children>
</GridPane>
